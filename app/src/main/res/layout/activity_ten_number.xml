<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFBEA">

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="लाडू बॉक्समध्ये टाका"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/ladooContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/textStatus"
        android:layout_marginTop="20dp">

        <!-- 10 ladoos -->
        <ImageView
            android:id="@+id/ladoo1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ladoo"
            android:tag="ladoo" />
        <ImageView
            android:id="@+id/ladoo2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ladoo"
            android:tag="ladoo" />
        <ImageView
            android:id="@+id/ladoo3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ladoo"
            android:tag="ladoo" />
        <ImageView
            android:id="@+id/ladoo4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ladoo"
            android:tag="ladoo" />
        <ImageView
            android:id="@+id/ladoo5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ladoo"
            android:tag="ladoo" />
        <ImageView
            android:id="@+id/ladoo6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ladoo"
            android:tag="ladoo" />
        <ImageView
            android:id="@+id/ladoo7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ladoo"
            android:tag="ladoo" />
        <ImageView
            android:id="@+id/ladoo8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ladoo"
            android:tag="ladoo" />
        <ImageView
            android:id="@+id/ladoo9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ladoo"
            android:tag="ladoo" />
        <ImageView
            android:id="@+id/ladoo10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ladoo"
            android:tag="ladoo" />




        <!-- Duplicate lado1 for ladoo2 to ladoo10 -->
        <!-- ... -->
    </LinearLayout>

    <!-- Box (Drop Target) -->
    <ImageView
        android:id="@+id/boxTarget"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ladoo_box"
        android:background="#DDDDDD" />

</RelativeLayout>
