<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F0FFF0">

    <!-- Question Text -->
    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 × 2 = ?"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Feedback Text -->
    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_below="@id/questionText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <!-- Apple Image (Draggable) -->
    <ImageView
        android:id="@+id/apple"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="120dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:src="@drawable/apple3"
        android:contentDescription="Apple" />

    <!-- Basket Image (Drop Target) -->
    <ImageView
        android:id="@+id/basket"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:src="@drawable/basket"
        android:contentDescription="Basket" />

    <!-- Hint Text Below Basket -->
    <!-- Hint Text Above Basket -->
    <TextView
        android:id="@+id/hintText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drag the apples into the basket!"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_above="@id/basket"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp" />


    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next ➡️"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/basket"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
