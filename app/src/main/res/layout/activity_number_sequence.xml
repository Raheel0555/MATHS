<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumberSequenceActivity"
    android:background="@drawable/bckg">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete the Number Sequence"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardShape"
        android:layout_width="350dp"
        android:layout_height="60dp"
       android:layout_marginTop="30dp"
        android:elevation="4dp"
        android:radius="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:text="2, 4, ?, 8, 10"
        android:textSize="24sp"
        android:gravity="center" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:orientation="horizontal" >
        <Button android:text="7" style="@style/CalcButton"

            android:id="@+id/btn1"/>
        <Button android:text="8" style="@style/CalcButton"
            android:id="@+id/btn2"/>
        <Button android:text="9" style="@style/CalcButton"
            android:id="@+id/btn3"/>
        <Button android:text="5" style="@style/CalcButton"
            android:id="@+id/btn4"/>

    </LinearLayout>





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnnext"
        android:text="Next"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"/>


</LinearLayout>

