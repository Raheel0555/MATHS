<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🏘️ Street Number Sequencing 🏘️"
        android:textSize="24sp"
        android:textColor="#FF6B35"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Challenge Description -->
    <TextView
        android:id="@+id/challengeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrange houses in correct order"
        android:textSize="18sp"
        android:textColor="#2E7D32"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Street View -->
    <com.example.maths.StreetView

        android:id="@+id/streetView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/street_background" />

    <!-- Progress Text -->
    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="#37474F"
        android:layout_marginTop="8dp" />

    <!-- Feedback Text -->
    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="#1976D2"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:minHeight="32dp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Reset Button -->
        <Button
            android:id="@+id/resetButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="🔄 Reset"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#FF5722"
            android:layout_marginEnd="8dp" />

        <!-- Next Challenge Button -->
        <Button
            android:id="@+id/nextChallengeButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="➤ Next Challenge"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#4CAF50"
            android:visibility="gone"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
